<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2"
    tools:context=".Settings">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/medicode_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/accountSettings"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/allerta"
        android:gravity="center"
        android:text="Account settings"
        android:textColor="@color/colorText2"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btn_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/logo"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/personalInformation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountSettings"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/allerta"
        android:text="Personal Information"
        android:textColor="@color/colorText2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/notifs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/notifs"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personalInformation"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/allerta"
        android:text="Notifications"
        android:textColor="@color/colorText2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/privacy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/protectData"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/privacySettings"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/allerta"
        android:text="How do we protect your data"
        android:textColor="@color/colorText2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Support"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/privacySettings"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/privacy"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/allerta"
        android:text="Privacy settings"
        android:textColor="@color/colorText2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/protectData"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/privacy"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notifs"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/allerta"
        android:gravity="center"
        android:text="Privacy"
        android:textColor="@color/colorText2"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/privacySettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/btn_logout"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountSettings"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/allerta"
        android:text="Logout"
        android:textColor="@color/colorText2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/personalInformation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/Support"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/protectData"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/allerta"
        android:gravity="center"
        android:text="Support"
        android:textColor="@color/colorText2"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/getHelp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/termsOfService"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/getHelp"
        android:layout_marginBottom="64dp"
        android:fontFamily="@font/allerta"
        android:text="Terms of service"
        android:textColor="@color/colorText2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/getHelp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Support"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/allerta"
        android:text="Get Help"
        android:textColor="@color/colorText2"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/termsOfService"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        app:itemBackground="@android:color/white"
        app:itemIconTint="@drawable/selector"
        android:background="@android:color/white"
        app:itemTextColor="@drawable/selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>